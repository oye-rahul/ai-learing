# Production Environment Variables for Vercel
# Add these to your Vercel project settings

# Server Configuration
NODE_ENV=production
PORT=5000

# Database - SQLite (for Vercel, use external DB in production)
DATABASE_URL=sqlite:./database.sqlite

# JWT Configuration (CHANGE THIS!)
JWT_SECRET=your-super-secret-jwt-key-min-32-characters-long-change-this-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production

# Gemini AI API (REQUIRED)
GEMINI_API_KEY=your-gemini-api-key-from-google-ai-studio
USE_FALLBACK_MODE=false

# CORS - Frontend URL (Update with your Vercel frontend URL)
FRONTEND_URL=https://your-app.vercel.app

# Backend URL (Update with your Vercel backend URL)
BACKEND_URL=https://your-backend.vercel.app

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Optional: Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Optional: Supabase (if using)
SUPABASE_URL=
SUPABASE_ANON_KEY=
SUPABASE_SERVICE_KEY=

# Optional: Google OAuth
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

